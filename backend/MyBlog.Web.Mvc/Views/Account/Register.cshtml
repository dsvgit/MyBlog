@model MyBlog.Web.Mvc.ViewModels.RegisterModel

<div class="w-50 m-auto">

    <h2>Регистрация</h2>

    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="invalid-feedback" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label><br/>
                <input class="form-control" type="text" asp-for="Email"/>
                <span asp-validation-for="Email" class="invalid-feedback"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label><br/>
                <input class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" class="invalid-feedback"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label><br/>
                <input class="form-control" asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center">
                <input type="submit" value="Зерегистрироваться" class="btn btn-primary"/>
                <a asp-action="Login" asp-controller="Account">Войти</a>
            </div>
        </div>
    </form>
</div>