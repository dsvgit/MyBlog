@model MyBlog.Web.Mvc.ViewModels.LoginModel

<div class="w-50 m-auto">

    <h2>Вход на сайт</h2>

    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="invalid-feedback" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input class="form-control" type="text" asp-for="Email"/>
            <span asp-validation-for="Email" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password" class="invalid-feedback"></span>
        </div>
        <div class="form-group d-flex justify-content-between align-items-center">
            <input type="submit" value="Войти" class="btn btn-primary"/>
            <a asp-action="Register" asp-controller="Account">Зерегистрироваться</a>
        </div>
    </form>
</div>